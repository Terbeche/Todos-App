<div class="todo <%= "completed" if todo.completed %>" id="<%= todo.id %>" draggable="true">
  <p>
    <%= check_box_tag "todo_completed_#{todo.id}", todo.id, todo.completed, data: { action: "click->todos#toggleCompleted" } %>
    <strong>Title:</strong>
    <span class="title"><%= todo.title %></span>
  </p>
  
  <p>
    <strong>Description:</strong>
    <span class="description"><%= todo.description %></span>
  </p>

  <p>
    <strong>Due date:</strong>
    <span class="due_date"><%= todo.due_date %></span>
  </p>
  <p>
    <%= link_to "Edit", edit_todo_path(todo), data: { action: "click->todos#edit" } %>
    <%= link_to "Delete", todo_path(todo), data: { action: "click->todos#delete" } %>
  </p>
</div>