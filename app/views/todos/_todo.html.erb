<div class="todo" id="<%= todo.id %>">
  <p>
    <strong>Title:</strong>
    <span class="title"><%= todo.title %></span>
  </p>
  
  <p>
    <strong>Description:</strong>
    <span class="description"><%= todo.description %></span>
  </p>

  <p>
    <strong>Due date:</strong>
    <span class="due_date"><%= todo.due_date %></span>
  </p>
  <p>
    <%= link_to "Edit", edit_todo_path(todo), data: { action: "click->todos#edit" } %>
    <%= link_to "Delete", todo_path(todo), data: { action: "click->todos#delete" } %>
  </p>
</div>